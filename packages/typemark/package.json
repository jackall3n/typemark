{
  "name": "typemark",
  "version": "0.1.0",
  "description": "Typed prompt templates for TypeScript. Change your prompt, break your build.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "bin": {
    "typemark": "dist/cli.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
